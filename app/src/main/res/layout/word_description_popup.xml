<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:paddingLeft="10dp"
    android:background="@color/white"
    android:paddingRight="10dp" >

    <View
        android:id="@+id/wordDefinitionExitButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/baseline_close_24"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/wordDefinitionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordDefinitionExitButton"
        android:text=""
        android:textAlignment="center"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wordDefinitionHeader">
        <LinearLayout
            android:id="@+id/wordDefinitionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/tall_divider"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/wordDefinitionProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/wordDefinitionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>