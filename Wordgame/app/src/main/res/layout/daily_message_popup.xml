<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/endScoreLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="200dp"
    android:background="@drawable/rounder_corner">

    <TextView
        android:id="@+id/endScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="@string/motd_header"
        android:textSize="22sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/motdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AAA\nAAA\nAA\nA\nAA\nAA\nAAA\nAA\nBB\nBB\nBB\nBB\nBBB\nBB\nBB\nBB"
            android:textColor="@color/black"
            android:textSize="13sp">
        </TextView>
    </ScrollView>

    <Button
        android:id="@+id/motdExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:text="@string/motd_confirm"/>

</LinearLayout>